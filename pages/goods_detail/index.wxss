swiper{
  height: 65vw;
  text-align: center;
}
swiper image{
  width: 60%;
}
.goods-price{
  color:#ff0000;
  padding: 15rpx 0;
}
.goods-info{
  display: flex;
  justify-content: space-between;
  align-items: center;
  border:1px solid #ccc;
  padding: 10rpx;
}
.goods-info .goods-name{
  flex: 5;
}
.goods-info .goods-shuocang{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  border-left: 2rpx solid #ccc;
  align-items: center;
}
.goods-detail{
  margin-bottom: 80rpx;
}
.goods-detail .goods-detail-title{
  font-size: 30rpx;
  color:#ff0000;
  padding:10rpx 0;
  border:10rpx solid #dedede;
  border-left: none;
  border-right: none;
}
/* 底部工具栏 */
.tools{
  border-top: 1px solid #ccc;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 80rpx;
  display: flex;
  font-size: 20rpx;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
}
.tools .icon-share{
  color:#6b494a;
}
.tools .tools-item{
  height: 100%;
  position: relative;
  flex:1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.tools .tools-item button{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.tools .cart,.tools .buy{
  flex: 1.5;
  color:#fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
}
.tools .cart{
  background-color: #ffa300;
}
.tools .buy{
  background-color: #ff0000;
}
